<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <!-- ===============================================-->
  <!--    Document Title-->
  <!-- ===============================================-->
  <title>Basic Bank System</title>


  <!-- ===============================================-->
  <!--    Stylesheets-->
  <!-- ===============================================-->
  <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="">
  <link href="stylesheets/theme.css" rel="stylesheet">

</head>


<body>

<!-- ===============================================-->
<!--    Main Content-->
<!-- ===============================================-->
<main class="main" id="top">
  <div class="container" data-layout="container">
    <div class="mt-2">
      <div class="mt-2">
        <div class="text text-primary text-center text-uppercase">
          Welcome to Basic Bank System
        </div>
      </div>
    </div>
    <div class="content mt-4">
      <div class="card mb-3">
        <div class="card-header">
          <div class="row align-items-center justify-content-between">
            <div class="col-6 col-sm-auto d-flex align-items-center pr-0">
              <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">Users </h5>
            </div>
          </div>
        </div>
        <div class="card-body px-0 pt-0">
          <div>
            <table class="table  table-sm table-dashboard fs--1 data-table border-bottom ">
              <thead class="bg-200 text-900">
              <tr>

                <th class="no-sort pr-1 align-middle data-table-row-bulk-select">
                  <div class="custom-control custom-checkbox">
                  </div>
                </th>
                <th class="sort pr-2 align-middle"></th>
                <th class="sort pr-2 align-middle">Customer</th>
                <th class="sort pr-1 align-middle">Email</th>
                <th class="sort pr-1 align-middle text-center">C.Balance</th>
              </tr>
              </thead>
              <%if (users){%>

              <%users.forEach (user =>{%>
               <tr class="btn-reveal-trigger">
                <td class="align-middle">
                  <div class="custom-control custom-checkbox">
                    <input class="custom-control-input checkbox-bulk-select-target" type="checkbox" id="checkbox-0" />
                    <label class="custom-control-label" for="checkbox-0"></label>
                  </div>
                </td>
                <th class="align-middle"><a href="/<%=user._id%>">Transfer</a></th>
                <th class="align-middle"><a href="/<%=user._id%>"><%=user.name%></a></th>
                <td class="align-middle" ><%=user.email%></td>
                <td class="align-middle text-center fs-0"><span class="">$<%=user.currentBalance%><span class="ml-1 fas fa-check" data-fa-transform="shrink-2"></span></span>
                </td>
                <td class="align-middle text-right mr-1"></td>
              </tr>
              <%})%>

              <%}else {%>
                <div class="text text-secondary">
                    No user recorded
                </div>
              <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>


   </div>
</main>
<!-- ===============================================-->
<!--    End of Main Content-->
<!-- ===============================================-->

<!-- ===============================================-->
<!--    JavaScripts-->
<!-- ===============================================-->
<script src="javascripts/bootstrap.min.js"></script>
<script src="javascripts/jquery.min.js"></script>
</body>

</html>
